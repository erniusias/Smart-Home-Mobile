{
    "manifest_version": 2,

    "name": "Smart Home Mobile",
    "description": "Used to control home automation devices.",
    "version": "1.2.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "index.html",
        "default_title": "Smart Home Mobile"
    },

    "background": {
        "scripts": ["js/chrome-ext-background.js"]
    },

    "permissions": [
        "https://*/",
        "http://*/",
        "clipboardWrite"
    ]
}